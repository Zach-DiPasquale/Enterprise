@page
@model KennUwareHR.Pages_Review.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
@if(Model.Review.Count() >= 1){
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Review[0].Comment)
                </th>
                <th>
                    Reviewer
                </th>
                <th>
                    Reviewed
                </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Review) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewerEmployee.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewedEmployee.FullName)
                </td>
            </tr>
    }
    </tbody>
</table>
} else {
    <p>You have not yet wrote or received any reviews. To write one for a co-worker click  <a asp-page="Create">Create New</a></p>
}
